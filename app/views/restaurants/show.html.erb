<h3><%= @restaurant.name %></h3>

<ul>
  <li>Address: <%= @restaurant.address %></li>
  <li>City: <%= @restaurant.city %></li>
  <li>State: <%= @restaurant.state %></li>
  <li>ZipCode: <%= @restaurant.zip_code %></li>
  <li>Description: <%= @restaurant.description %></li>
  <li>Category: <%= @restaurant.category %></li>
</ul>

<h3>Add A Review</h3>

<%= form_for([@restaurant, @restaurant.reviews.build]) do |review| %>

<div>
  <%= review.label :rating %>
  <%= review.select :rating, ['1','2','3','4','5'] %>
</div>
</br>

<div>
  <%= review.label :body %>
  <%= review.text_area :body, :rows => 4, :cols => 50 %>
</div>
<br>


<%= review.submit 'Submit' %>
<% end %>
<hr>


<%= link_to 'Back', :back %>

