<h3><%= @restaurant.name %></h3>

<ul>
  <li>Address: <%= @restaurant.address %></li>
  <li>City: <%= @restaurant.city %></li>
  <li>State: <%= @restaurant.state %></li>
  <li>ZipCode: <%= @restaurant.zip_code %></li>
  <li>Description: <%= @restaurant.description %></li>
  <li>Category: <%= @restaurant.category %></li>
</ul>

<h3>Add A Review</h3>

<%= form_for([@restaurant, @restaurant.reviews.build]) do |f| %>

<div>
  <%= f.label :rating %>
  <%= f.select :rating, ['1','2','3','4','5'] %>
</div>
</br>

<div>
  <%= f.label :body %>
  <%= f.text_area :body, :rows => 4, :cols => 50 %>
</div>
</br>


<%= f.submit 'Submit' %>
<% end %>
<hr>


<ul>

<% @restaurant.reviews.each do |review| %>
<li>Rating:<%= review.rating %></li>
<li>Review: <%= review.body %></li>
<li>Date: <%= review.created_at %></li>

</br>
<hr>

<% end %>

</ul>

<hr>

<%= link_to 'Back', restaurants_path %>





